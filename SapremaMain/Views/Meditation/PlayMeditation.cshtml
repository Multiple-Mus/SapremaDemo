@model SapremaMain.Models.MeditationViewModels.PlayMeditationViewModel




<div class="container" onload="startMeditation()">
    <h1 class="page-header">Meditation Player</h1>
    <img id="play-meditation-image" class="img-responsive center-block" width="40%" src="../images/logo.svg"/><br />
    <audio id="meditation-player" autoplay onended="showReviewModal();">
        <source src="~audio/ding.mp3" id="audio-source" type="audio/mpeg" />
    </audio>
    
    <div class="row col-sm-12 col-sm-12 col-md-12 col-lg-12 player-controls">
        <input id="vol-control-main" type="range" min="0" max="100" step="1" width="100px" value="100" oninput="SetVolume(this.value)" onchange="SetVolume(this.value)"></input>
        <a asp-area="" asp-controller="Meditation" asp-action="Meditations" id="stop-button"><p class="fa fa-stop-circle-o" aria-hidden="true"></p></a> 
        <a href="javascript:void(0)" onclick="fullscreen()" id="fullscreen-button"><p class="fa fa-expand" aria-hidden="true"></p></a>
    </div>
</div>

<div id="meditation-fullscreen" class="overlay">
    <div class="overlay-content">
        <p class="player-text" id="meditation-text"></p>
        <img id="play-meditation-image" class="img-responsive center-block" width="25%" src="../images/logo.svg" /><br />
        <div>
            <input id="vol-control-overlay" type="range" min="0" max="100" step="1" width="100px" value="100" oninput="SetVolume(this.value)" onchange="SetVolume(this.value)"></input>
            <a asp-area="" asp-controller="Meditation" asp-action="Meditations" id="stop-button"><p class="fa fa-stop-circle-o" aria-hidden="true"></p></a>
            <a href="javascript:void(0)" onclick="hideDisplay()" id="stop-button"><p class="fa fa-compress" aria-hidden="true"></p></a>
        </div>

    </div>
</div>

<div id="review-modal" class="modal fade" role="dialog">
</div>

<script type="text/javascript" src="~/js/playMeditation.js"></script>
<script>
    var foo = '@Model.MeditationId';
</script>